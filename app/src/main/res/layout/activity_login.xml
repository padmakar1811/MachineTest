<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_root"
    android:background="@color/white">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log in"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAppearance="@style/TextFieldBold"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your Name For\nChatting"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAppearance="@style/TextFieldBold"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="This name Id will be used for all chat-related communication. please enter valid name."
                    android:textColor="@color/subtextColor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="14sp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="match_parent"
                    android:paddingStart="12dp"
                    android:drawablePadding="4dp"
                    android:hint="Enter Your Name"
                    android:imeOptions="actionDone"
                    android:textSize="15sp"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                    android:textColor="@color/black"
                    android:inputType="textCapWords"
                    android:layout_height="56dp"
                    android:id="@+id/editName"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartChat"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    app:cornerRadius="12dp"
                    android:text="Continue"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    app:iconTint="@color/textColor"
                    app:iconGravity="textStart"
                    app:backgroundTint="@color/colorPrimary"
                    android:layout_height="64dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>